<?xml version="1.0"?>
<sprite>

	<imageset name="base" src="graphics/sprites/monsters/mammoth.png" width="250" height="250"/>

	<action name="stand" imageset="base">
		<animation direction="down">
		  <frame index="0" offsetX="0" offsetY="100"/>
		</animation>
		<animation direction="left">
		  <frame index="10" offsetX="0" offsetY="100"/>
		</animation>
		<animation direction="up">
		  <frame index="20" offsetX="0" offsetY="100"/>
		</animation>
		<animation direction="right">
		  <frame index="30" offsetX="0" offsetY="100"/>
		</animation>
	</action>

	<action name="walk" imageset="base">
		<animation direction="down">
			<sequence start="1" end="4" delay="300" offsetX="0" offsetY="100"/>
		</animation>
		<animation direction="left">
			<sequence start="11" end="14" delay="300" offsetX="0" offsetY="100"/>
		</animation>
		<animation direction="up">
			<sequence start="21" end="24" delay="300" offsetX="0" offsetY="100"/>
		</animation>
		<animation direction="right">
			<sequence start="31" end="34" delay="300" offsetX="0" offsetY="100"/>
		</animation>
	</action>

	<action name="dead" imageset="base">
		<animation direction="down">
			<frame index="9" delay="100" offsetX="0" offsetY="100"/>
		</animation>
		<animation direction="left">
			<frame index="19" delay="100" offsetX="0" offsetY="100"/>
		</animation>
		<animation direction="up">
			<frame index="29" delay="100" offsetX="0" offsetY="100"/>
		</animation>
		<animation direction="right">
			<frame index="39" delay="100" offsetX="0" offsetY="100"/>
		</animation>
	</action>

	<action name="attack" imageset="base">
		<animation direction="down">
			<sequence start="5" end="8" delay="150" offsetX="0" offsetY="100"/>
			<end />
		</animation>
		<animation direction="left">
			<sequence start="15" end="18" delay="150" offsetX="0" offsetY="100"/>
			<end />
		</animation>
		<animation direction="up">
			<sequence start="25" end="28" delay="150" offsetX="0" offsetY="100"/>
			<end />
		</animation>
		<animation direction="right">
			<sequence start="35" end="38" delay="150" offsetX="0" offsetY="100"/>
			<end />
		</animation>
	</action>

</sprite>
